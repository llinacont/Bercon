  </tr>

<% @products.each do |product| %>
  <tr id="tr3">
    <td id="td3"><%= product.title %></td>
    <td id="td3"><%= product.description %></td>
    <td id="td3"><%= product.price %></td>
    <td id="td3"><%= product.image_url %></td>
    <td id="td3"><%= link_to 'Mostrar', product %></td>
    <td id="td3"><%= link_to 'Editar', edit_product_path(product) %></td>
