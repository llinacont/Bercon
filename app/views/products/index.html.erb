<h1 id="titulo3">Tus Productos</h1>

<div id="products">
	<div id="left_col">
		<%@product = Product.new%>
		<%= form_for(@product) do |f| %>
  			<% if @product.errors.any? %>
  			  <div id="error_explanation">
    			  <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
			
    			  <ul>
    			  <% @product.errors.full_messages.each do |msg| %>
    			    <li><%= msg %></li>
    			  <% end %>
   			   </ul>
    			</div>
  			<% end %>
  
  			<%= f.hidden_field :user_id, :value => current_user.id%> 
  			<div class="field">
  				<%= f.label :Nombre%>
			    <%= f.text_field :title %>
    		</div>
  			<div class="field">
    			<%= f.label :Precio%>
			    <%= f.text_field :price %>
    		</div>
  			<div class="field">
    			<%= f.label :Descripción%>
			    <%= f.text_area :description %>
    		</div>
  			<div class="field">
    			<%= f.label :imagen%>
			    <%= f.text_field :image_url %>
    		</div>
  			<div>
  				<%= button_to 'Añadir Producto', products_path(:title => @product.title, :price => @product.price, :description => @product.description, :image_url => @product.image_url) %>
			</div> 		
	  <% end %>
	</div>
	
	<div id="right_col">
		
		<table class="table table-striped">
		<thead>
 		 <tr>
 		    <th>Nombre</th>
    		<th>Descripción</th>
    		<th>Precio</th>
    		<th>Image url</th>
    		<th></th>
    		<th></th>
    		<th></th>
  		</tr>
  		</thead>
  		
  		<tbody>
  		<% @products.each do |product| %>
		  <tr>
		    <td><%= product.title %></td>
    		<td><%= product.description %></td>
    		<td><%= product.price %></td>
    		<td><%= product.image_url %></td>
    		<td><%= link_to 'Mostrar', product %></td>
    		<td><%= link_to 'Editar', edit_product_path(product) %></td>
    		<td><%= link_to '', product, :class => 'destroyButton', method: :delete,
   	  				 data: { confirm: '¿Estás seguro?' }, :class  => "icon-trash" %></td>
  		  </tr>
		<% end %>
		</tbody>
		</table>
		
	</div>
</div>

<br />
<div id="back">
	<%= link_to 'Paso 3', :controller => '/clients', :action => 'index' %>
</div>
