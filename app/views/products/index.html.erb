<h2>Productos</h2>

<table class = "table table-striped">
  <tr>
    <th>Imagen</th>
    <th>Producto</th>
    <th>Precio</th>
    <th>Descripción</th>
  </tr>
  
<% @Products = Product.where(:user_id => current_user.id) %>
<% @Products.each do |product| %>

  <tr>
  	<tr>
    <td><%= image_tag("product.jpg",:size => "32x20", :alt => "")%></td>
    <td><%= product.title %></td>
    <td><%= product.price %></td>
    <td><%= product.description %></td>
    <td><%= link_to '', product_path(product), :class => "icon-share" %></td>
    <td><%= link_to '', edit_product_path(product), :class => "icon-edit" %></td>
    <td><%= link_to '', product, :class => 'destroyButton', method: :delete,
   	  		data: { confirm: '¿Estás seguro?' }, :class  => "icon-trash" %></td>
  </tr>
<% end %>
</table>

<br />

