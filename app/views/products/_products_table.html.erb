<table class="table table-striped">
 		 <tr>
 		 	<th>Imagen</th>
 		    <th>Nombre</th>
    		<th>Precio</th>
  		</tr>
  		<% @products = Product.where(:user_id => current_user.id) %>
		<% @products.each do |product| %>
		  <tr>
		  	<td><%= image_tag("product.jpg",:size => "32x20", :alt => "")%></td>
		    <td><%= product.title %></td>
    		<td><%= product.price %></td>
    		<td><%= link_to '', edit_product_path(product), :class => "icon-edit" %></td>
    		<td><%= link_to '', product, :class => 'destroyButton', :action => 'destroy',
   	  				 data: { confirm: '¿Estás seguro?' }, :class  => "icon-trash" %></td>
  		  </tr>
		<% end %>
</table>