<div>
	<h3>Regístrate</h3>
</div>




    
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  		<%= devise_error_messages! %>
  		
  		<div class="row">
			  
			<div class="span4 offset2">
				<div id="input"><%= f.label :email %><br />
		  		<%= f.email_field :email %></div>
		  		
				<div id="input"><%= f.label :Contraseña %><br />
		  		<%= f.password_field :password %></div>
		  		
		  		<div id="input"><%= f.label :'Confirma tu contraseña'%><br />
		  		<%= f.password_field :password_confirmation%></div>	
			</div>
			
			<div class="span4">
		  		 <div id="input"><%= f.label :Nombre %><br />
		  		<%= text_field_tag :name %></div>
		  		
		  		<div id="input"><%= f.label :Apellidos %><br />
		  		<%= text_field_tag :last_name %></div>
		  		
		  		<%= f.hidden_field :roles_mask, :value => '1'%>
		  		
		  		<div style="margin-top:15%; margin-left: 65%">
		  			<%= f.submit "Acceder" %>
		  		</div>
  			</div>
  
		</div>
  
		<div class="progress progress-striped active">
			<div class="bar" style="width: 25%;">Regístrate</div>
		</div>
		<% end %>
