<div>
	<h3>Regístrate</h3>
</div>

<div style="text-align: center">

  <div>
    
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  		<%= devise_error_messages! %>

  		<div id="input"><%= f.label :email %><br />
  		<%= f.email_field :email %></div>

  		<div id="input"><%= f.label :Contraseña %><br />
  		<%= f.password_field :password %></div>
  		
  		<div id="input"><%= f.label :'Confirma tu contraseña'%><br />
  		<%= f.password_field :password_confirmation%></div>
  		
  		<%= f.hidden_field :roles_mask, :value => '1'%>
  		
  <div><%= f.submit "Acceder" %></div>
  
</div>
  
<div class="progress progress-striped active">
  <div class="bar" style="width: 25%;">Regístrate</div>
</div>
<% end %>

<%= render :partial => "devise/shared/links" %>
</div>