<h2>Clientes</h2>
<div style="float: right; font-size: large">
	<%= link_to 'Atrás', :controller => '/center', :action => 'index' %>
</div>
<table class = "table table-striped">
  <tr>
    <th>Imagen</th>
    <th>Nombre</th>
    <th>CIF</th>
    <th>Dirección</th>
  </tr>
  
<% @Clients = Client.where(:user_id => current_user.id)%>
<% @Clients.each do |client| %>

  <tr>
  	<tr>
    <td><%= image_tag("client.png",:size => "32x20", :alt => "")%></td>
    <td><%= client.name %></td>
    <td><%= client.cif %></td>
    <td><%= client.address %></td>
    <td><%= link_to '', client_path(client), :class => "icon-share" %></td>
    <td><%= link_to '', edit_client_path(client), :class => "icon-edit" %></td>
    <td><%= link_to '', client, :class => 'destroyButton', method: :delete,
   	  		data: { confirm: '¿Estás seguro?' }, :class  => "icon-trash" %></td>
  </tr>
<% end %>
</table>

<br />

<div style="float: right; font-size: large">
	<%= link_to 'Atrás', :controller => '/center', :action => 'index' %>
</div>