<h1>Tus Clientes</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>CIF</th>
    <th>Dirección</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clients.find(:user_id => current_user.id) do |client| %>
  <tr>
    <td><%= client.name %></td>
    <td><%= client.cif %></td>
    <td><%= client.address %></td>
    <td><%= link_to 'Mostrar', client %></td>
    <td><%= link_to 'Editar', edit_client_path(client) %></td>
    <td><%= link_to 'Destruir', client, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
  </tr>
<% end %>
</table>

