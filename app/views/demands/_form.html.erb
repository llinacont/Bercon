<%= form_for(@demand) do |f| %>
  <% if @demand.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@demand.errors.count, "error") %> prohibited this demand from being saved:</h2>

      <ul>
      <% @demand.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :product_id %><br />
    <%= f.select :product_id, Product.where(user_id:current_user.id).collect {|x| [x.title, x.id]}, :multiple => true %>
  </div>
  <div class="field">
    <%= f.label :client_id %><br />
   	<%= f.select :client_id, Client.where(user_id:current_user.id).collect {|x| [x.name, x.id]}, :multiple => true %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br />
   	<%= f.text_area :quantity %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
