<h1>Lista de empleados</h1>

<table class = "table table-striped">
  <tr>
    <th>Name</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @Users = User.where(:company_id => current_user.company_id)%>
<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.image %></td>
    <td><%= link_to '', user , :class => "icon-share" %></td>
    <td><%= link_to '', edit_user_path(user), :class => "icon-edit" %></td>
    <td><%= link_to '', user, :class => 'destroyButton', method: :delete,
    		data: { confirm: '¿Estás seguro?' }, :class  => "icon-trash" %></td>
  </tr>
<% end %>
</table>

